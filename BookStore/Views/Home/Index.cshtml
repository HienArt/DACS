<script>
    $(document).ready(function () {
        setInterval(function () {
            if (sessionStorage.getItem('#myModal') !== 'true') {
                $('#myModal').modal('show');
                sessionStorage.setItem('#myModal', 'true');
            }

        }, 5000);

    });
</script>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Chúng tôi có thể giúp gì cho bạn</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @*<form>*@
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Bạn thích đọc sách thuộc chủ đề nào?</label>
                        @Html.DropDownList("MaChuDe", null, htmlAttributes: new { @class = "form-control" })
              
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Bạn thường mua của nhà xuất bản nào?</label>
                        @Html.DropDownList("MaNXB", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Bạn thích đọc sách của tác giả nào?</label>
                        @Html.DropDownList("MaTacGia", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <input type="submit" value="Search" class="btn btn-primary" />
                       
                }
                @*</form>*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>




